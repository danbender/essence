<%= form_for :session, :url => session_path do |form| %>
    <%= form.text_field :email, :type => 'email', placeholder: 'email', class: "sign-up-input" %>
    <%= form.password_field :password, placeholder: 'password', class: "sign-up-input" %>
    <%= form.submit %>

    <%= link_to "Don't have an account? Sign Up!", sign_up_path, class: "sign_in_link"  %>
    <%= link_to t('.forgot_password'), new_password_path, class: "sign_in_link"  %>
<% end %>
