<div class="reader">

  <%= render 'test_doc' %>

  <%= button_to "Add Snippet", new_snippet_path, class: "add-snippet" %>

  <%= form_for @snippet, url: snippets_path, method: 'POST' do |f| %>
    <%= f.label :topic %>
    <%= f.collection_select(:topic_id, @sorted_topics, :id, :name, :prompt => "Select a topic") %>
    <%= f.hidden_field :content, value: "test" %>
    <%= f.submit "Save" %>
  <% end %>
</div>